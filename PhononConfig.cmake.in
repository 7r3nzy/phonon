find_path(PHONON_INCLUDE_DIR_EXPERIMENTAL NAMES phonon/experimental/export.h PATHS ${PHONON_INCLUDE_DIR} NO_DEFAULT_PATH)

include(${_CURRENT_DIR}/PhononTargets.cmake )

set(PHONON_LIBS Phonon::phonon )

set(PHONON_INCLUDES ${PHONON_INCLUDE_DIR} ${PHONON_INCLUDE_DIR}/KDE )

